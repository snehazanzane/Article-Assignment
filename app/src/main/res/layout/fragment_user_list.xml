<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@color/gray_light_bk"
android:layout_height="match_parent"
tools:context=".view.fragment.UserListFragment">

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/itemsswipetorefresh_UserListFragment"
    android:layout_width="0dp"
    android:layout_height="0px"
    android:padding="8dp"
    android:layout_weight="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_UserListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_light_bk"
        tools:listitem="@layout/view_article_item" />
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>